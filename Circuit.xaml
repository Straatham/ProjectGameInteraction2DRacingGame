<Window x:Class="ProjectGameInteraction2DRacingGame.Circuit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectGameInteraction2DRacingGame"
        mc:Ignorable="d"
        Title="Circuit"    
        WindowState="Maximized" 
        WindowStyle="None"  >
    <!--        
    WindowState="Maximized" 
    WindowStyle="None"  
    -->

    <Grid HorizontalAlignment="Stretch" x:Name="GameGrid" VerticalAlignment="Stretch" Margin="0" Height="Auto" Width="Auto">
        <Image Source="/Images/circuit 3.png" x:Name="TrackImage" Stretch="UniformToFill" />
        <Canvas x:Name="gameCanvas" Background="Transparent" Height="auto" Width="auto">
            <Rectangle Fill="AliceBlue" Height="20" Width="20" Margin="1" ></Rectangle>

        </Canvas>
    </Grid>

    

</Window>
