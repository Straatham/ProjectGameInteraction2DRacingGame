<Page x:Class="ProjectGameInteraction2DRacingGame.Components.PlayerSetupComponent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectGameInteraction2DRacingGame.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerSetupComponent">

    <Grid>
        <StackPanel Width="800" HorizontalAlignment="Center" Margin="0,0,0,0">
            <TextBox x:Name="PlayerNameInput" Text="Fill In Name" FontFamily="Raleway" VerticalContentAlignment="Center" FontSize="26" Foreground="White" Margin="50,10,50,0" Height="50" BorderBrush="#FF1F1F1F" BorderThickness="2" Background="#FFB1B1B1">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="Fill in name">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Grid VerticalAlignment="Center" Margin="0,50,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="480" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button x:Name="Button_Decrease" Grid.Column="0" Height="200" Margin="55,0,35,0" Foreground="White" Background="#FFB1B1B1" FontSize="70" Padding="0,-19,2,0"  BorderBrush="#FF1F1F1F" >-
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8,0,0,8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Border  Grid.Column="1" Height="475" Background="#FFB1B1B1" BorderBrush="#FF1F1F1F" BorderThickness="2" >
                    <Label x:Name="Carviewer_Image" Background="Black" Content="Car 01" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Raleway" FontSize="30"  Margin="80">
                        
                    </Label>
                </Border>
                <Button x:Name="Button_Increase" Grid.Column="2" Height="200" Margin="35,0,55,0" Foreground="White" Background="#FFB1B1B1" FontSize="70" Padding="0,-18,0,0" BorderBrush="#FF1F1F1F">+
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0,8,8,0"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
            <ListView x:Name="ColorListView" VerticalAlignment="Bottom" Margin="50,60,50,0" Height="100" Background="#FFB1B1B1"
                      d:ItemsSource="{d:SampleData ItemCount=8}" 
                      ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                      ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                      ScrollViewer.CanContentScroll="False">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel IsItemsHost="True" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="2,0,0,0"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <Button x:Name="Button_Ready" Content="READY" Margin="0,30,0,0" Height="54" VerticalAlignment="Bottom" Background="#FF68BC40" BorderBrush="Black" Foreground="White" BorderThickness="0.5,1,1,1" FontFamily="Raleway" FontSize="24" HorizontalAlignment="Center" Width="218">
                <Button.Effect>
                    <DropShadowEffect Direction="-90" BlurRadius="10" Color="#FF3C3C3C" RenderingBias="Performance" ShadowDepth="3"/>
                </Button.Effect>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
